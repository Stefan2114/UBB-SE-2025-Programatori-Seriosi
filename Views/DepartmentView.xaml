<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Team3.Views.DepartmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Department View"
    Width="500"
    Height="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ComboBox to select a department -->
        <ComboBox x:Name="selectDepartment" Width="200" Height="30" Margin="10" Grid.Row="0"/>

        <!-- ListView to display department info -->
        <ListView x:Name="departmentInfoList" Width="350" Height="200" Margin="10" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Department ID" DisplayMemberBinding="{Binding DepartmentId}" Width="100"/>
                    <GridViewColumn Header="Department Name" DisplayMemberBinding="{Binding DepartmentName}" Width="150"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Back button -->
        <Button x:Name="backButton" Content="Back" Width="100" Height="30" Margin="10" Grid.Row="2"/>
    </Grid>

</Window>
