<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Team3.Views.AuditOptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Team3.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Back Button at top left -->
            <Button x:Name="BackButton" 
            Content="Back" 
            Click="BackButton_Click"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="0,0,0,20"/>

           
            <!-- Navigation Buttons in the middle -->
            <StackPanel Grid.Row="1" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Spacing="20">

                <Button x:Name="DoctorStatsButton" 
                Content="DoctorView" 
                Click="DoctorStatsButton_Click"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="60"
                FontSize="16"/>

                <Button x:Name="DepartmentStatsButton" 
                Content="DepartmentView" 
                Click="DepartmentStatsButton_Click"
                HorizontalAlignment="Stretch"
                Width="200"
                Height="60"
                FontSize="16"/>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
